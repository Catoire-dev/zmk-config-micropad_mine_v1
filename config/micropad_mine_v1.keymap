#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>

#define L_NUMPAD  0
#define L_GAME    1

/ {
    keymap {
        compatible = "zmk,keymap";

        default_layer {
            bindings = <
&kp EQUAL     &kp SLASH     &kp ASTERISK  &kp MINUS
&kp N7        &kp N8        &kp N9        &kp PLUS
&kp NUMBER_4  &kp N5        &kp NUMBER_6  &kp LEFT_PARENTHESIS
&kp NUMBER_1  &kp NUMBER_2  &kp NUMBER_3  &kp RIGHT_PARENTHESIS
&kp N0        &to L_GAME    &kp DOT       &kp ENTER
&kp A
            >;
        };

        game_layer {
            bindings = <
&kp LCTRL  &kp LEFT_SHIFT  &kp TAB  &kp NUMBER_1
&kp P      &kp A           &kp Q    &kp NUMBER_2
&to 0      &kp S           &kp W    &kp NUMBER_3
&kp B      &kp D           &kp E    &kp NUMBER_4
&kp SPACE  &kp G           &kp F    &kp R
&none
            >;
        };
    };
};
